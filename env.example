# n8n Environment Configuration

# Basic Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=password

# Server Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http

# Webhook Configuration
WEBHOOK_URL=https://your-app-name.nexlayer.app/

# Timezone
GENERIC_TIMEZONE=UTC

# Security
N8N_ENCRYPTION_KEY=your-encryption-key-here
N8N_USER_MANAGEMENT_DISABLED=false

# Features
N8N_DIAGNOSTICS_ENABLED=false
N8N_TEMPLATES_ENABLED=true
N8N_ONBOARDING_FLOW_DISABLED=false

# Database (for production, consider using external database)
N8N_DATABASE_TYPE=sqlite
N8N_DATABASE_SQLITE_PATH=/home/n8n/.n8n/database.sqlite

# Logging
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Execution
N8N_EXECUTIONS_PROCESS=main
N8N_EXECUTIONS_MODE=regular
N8N_EXECUTIONS_TIMEOUT=3600

# Queue
N8N_QUEUE_BULL_REDIS_HOST=localhost
N8N_QUEUE_BULL_REDIS_PORT=6379
N8N_QUEUE_BULL_REDIS_DB=0
